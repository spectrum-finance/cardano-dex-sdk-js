{
  "name": "@spectrumlabs/cardano-dex-sdk",
  "description": "TypeScript SDK for the Cardano AMM protocol",
  "version": "0.1.2",
  "author": "Ilya Oskin <ilya.arcadich@gmail.com> (https://ergoplatfrom.org/)",
  "license": "SEE LICENSE IN LICENSE",
  "main": "./lib/cjs/index.js",
  "type": "module",
  "keywords": [
    "cardano",
    "dex",
    "sdk",
    "amm"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "yarn run clean && tsc -p ./tsconfig.json && mv lib/esm/index.js lib/esm/index.mjs",
    "prepack": "yarn run build",
    "lint": "yarn eslint .",
    "release": "semantic-release",
    "test": "yarn run build && ava"
  },
  "dependencies": {
    "@emurgo/cardano-serialization-lib-browser": "^11.3.1",
    "axios": "^1.4.0",
    "blakejs": "^1.1.0",
    "bs58": "^4.0.1",
    "crypto-js": "^4.0.0",
    "esm-wallaby": "^3.2.25",
    "json-bigint": "^1.0.0",
    "mathjs": "^11.8.0",
    "ramda": "0.27.1"
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@ava/typescript": "^1.1.1",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.15.6",
    "@emurgo/cardano-serialization-lib-nodejs": "^11.3.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/bs58": "^4.0.1",
    "@types/crypto-js": "^4.0.1",
    "@types/json-bigint": "^1.0.1",
    "@types/mathjs": "^9.4.2",
    "@types/node": "^15.14.9",
    "@types/ramda": "0.27.32",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "ava": "^5.2.0",
    "codecov": "^3.5.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "esm": "^3.2.25",
    "gh-pages": "^3.1.0",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.2",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^5.0.4"
  },
  "files": [
    "lib"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "lib/main/"
      }
    },
    "require": [
      "esm-wallaby",
      "@babel/polyfill"
    ],
    "babel": true
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": false,
    "semi": false,
    "tabWidth": 2,
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "trailingComma": "none"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "engines": {
    "node": ">=16"
  }
}
